---
layout: layouts/base.njk
---

<div class="page-header">
    <div class="page-header-content container">
        <h1 class="page-title">{{ title }}</h1>
        <div class="page-intro">{{ content | safe }}</div>
    </div>
</div>
<div class="block container">
    <div class="article-list">

        {% set postslist = collections.post %}
        {% for post in postslist | reverse %}
            <div class="article-list-item">
                {% if post.data.date %}
                    <time class="article-list-item-date" format="{{ post.data.date | readableDate }}">{{ post.data.date | readableDate() }}</time>
                {% endif %}
                <h2 class="article-list-item-title">
                    <a href="{{ post.url | url }}">
                        {% if post.data.title %}
                            {{ post.data.title }}
                        {% else %}
						Untitled
					{% endif %}
                    </a>
                </h2>
                <div class="article-list-item-excerpt">{{ post.data.summary | md | safe }}</div>
            </div>
        {% endfor %}
    </div>
